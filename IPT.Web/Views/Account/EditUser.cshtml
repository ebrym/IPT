@model IPT.Web.Models.AccountModel.RegisterViewModel
@{
    ViewData["Title"] = "Edit Users";
}

<div class="row row-sm mg-t-20">
    <div class="col-xl-12">
        <div class="card pd-20 pd-sm-40 form-layout form-layout-4">
            <h6 class="card-body-title">User</h6>
            <p class="mg-b-20 mg-sm-b-30"> Edit User</p>
            <form role="form" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <label class="col-sm-4 form-control-label">First name: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter firstname" required>
                    </div>
                </div><!-- row -->
                <div class="row mg-t-20">
                    <label class="col-sm-4 form-control-label">Last name: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Enter lastname">
                    </div>
                </div>
                @*<div class="row mg-t-20">
                    <label class="col-sm-4 form-control-label">User name: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="Username" type="text" class="form-control" placeholder="Enter username" >
                    </div>
                </div>*@
                <div class="row mg-t-20">
                    <label class="col-sm-4 form-control-label">Email: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="Email" type="text" class="form-control" placeholder="Enter email address" >
                    </div>
                </div>
                <div class="row mg-t-20">
                    <label class="col-sm-4 form-control-label">Department: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="Department" type="text" class="form-control" placeholder="Enter department">
                    </div>
                </div>
                <div class="row mg-t-20">
                    <label class="col-sm-4 form-control-label">Unit: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="Unit" type="text" class="form-control" placeholder="Enter unit">
                    </div>
                </div>
                @*<div class="row mg-t-20">
                    <label class="col-sm-4 form-control-label">Password: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter Password">
                    </div>
                </div>
                <div class="row mg-t-20">
                    <label class="col-sm-4 form-control-label">Confirm Password: <span class="tx-danger">*</span></label>
                    <div class="col-sm-8 mg-t-10 mg-sm-t-0">
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm Password">
                    </div>
                </div>*@

                <input asp-for="Id" class="form-control" type="hidden" placeholder="Confirm Password">
                <div class="form-layout-footer mg-t-30">
                    <button class="btn btn-info mg-r-5">Submit Form</button>
                    <a class="btn btn-secondary" asp-controller="Account" asp-action="Users">Cancel</a>
                </div><!-- form-layout-footer -->
            </form>
        </div><!-- card -->
    </div><!-- col-6 -->

</div>